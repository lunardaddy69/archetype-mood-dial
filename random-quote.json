import { promises as fs } from 'fs';
import path from 'path';

export default async function handler(req, res) {
  try {
    const filePath = path.join(process.cwd(), 'quotes.json');  // adjust if needed
    const fileContents = await fs.readFile(filePath, 'utf8');
    const quotes = JSON.parse(fileContents);

    const pick = quotes[Math.floor(Math.random() * quotes.length)];
    res.setHeader('Cache-Control', 'no-store');
    res.status(200).json(pick);
  } catch (err) {
    console.error('Error reading quotes.json:', err);
    res.status(500).json({ error: 'Could not load quotes' });
  }
}
